<UserControl x:Class="FESScript2.Graphics.SupportWindow.CommandLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FESScript2.Graphics.SupportWindow"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="250">
    <Grid>
        <Border Background="Black" BorderBrush="Gray" BorderThickness="0,2.5,0,0"/>
        <TextBox VerticalAlignment="Bottom" BorderThickness="0" CaretBrush="White" SelectionBrush="LightGray" SelectionTextBrush="DarkGray" MaxLines="1" Height="17.5" x:Name="commandLineText" Background="Transparent" BorderBrush="Transparent" FontFamily="Times New Roman" FontSize="12.5" Foreground="White" KeyDown="commandLineText_KeyDown">
        </TextBox>
    </Grid>
</UserControl>
