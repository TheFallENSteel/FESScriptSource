             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FESScript2.Settings.Support"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="PathBox" Height="20" Margin="7, 0" BorderThickness="2" BorderBrush="Orange" MaxLines="1" TextChanged="PathBox_TextChanged"/>        
    </Grid>
</UserControl>
