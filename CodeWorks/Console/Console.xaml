<Window x:Class="FESScript2.Console.Console"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FESScript2.Console"
        xmlns:Support="clr-namespace:FESScript2.Graphics.SupportWindow"
        mc:Ignorable="d"
        Closed="OnClosed"
        Title="Console" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <Support:TextSpace x:Name="consoleLines" Grid.Row="0"/>
        </ScrollViewer>
        <Support:CommandLine x:Name="commandLine" Grid.Row="1"/>
    </Grid>
    
</Window>
